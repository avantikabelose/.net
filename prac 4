using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Windows.Forms;

namespace LoginApp
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }
        // This code should go in the button click event handler.
private void btnRegister_Click(object sender, EventArgs e)
{
    // Clear previous error message
    lblError.Text = "";

    // Get user inputs
    string username = txtUsername.Text;
    string password = txtPassword.Text;
    string confirmPassword = txtConfirmPassword.Text;

    // Validation checks
    if (string.IsNullOrEmpty(username))
    {
        lblError.Text = "Username is required!";
        return;
    }

    if (string.IsNullOrEmpty(password))
    {
        lblError.Text = "Password is required!";
        return;
    }

    if (password.Length < 6)  // Simple password length validation
    {
        lblError.Text = "Password must be at least 6 characters long.";
        return;
    }

    if (password != confirmPassword)
    {
        lblError.Text = "Passwords do not match!";
        return;
    }

    // If validation passes, display success message or move to login screen
    MessageBox.Show("Registration successful!", "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);

    // Optionally, clear the form fields after successful registration
    txtUsername.Clear();
    txtPassword.Clear();
    txtConfirmPassword.Clear();
}

private void txtLoginUsername_TextChanged(object sender, EventArgs e)
{
    public Form1()
{
    InitializeComponent();

    // Initially, show the registration controls, hide the login controls
    txtLoginUsername.Visible = false;
    txtLoginPassword.Visible = false;
    btnLogin.Visible = false;
    lblLoginError.Visible = false;
}

}


        }
    }
